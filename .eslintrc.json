{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },

  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "mocha": true
  },

  "extends": "eslint:recommended",

  "globals": {
  },

  "rules": {
    "no-bitwise": [
      "error"
    ],

    "camelcase": [
      "error"
    ],

    "curly": [
      "error",
      "all"
    ],

    "eqeqeq": ["error"],

    "wrap-iife": [
      "error",
      "any"
    ],

    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],

    "new-cap": [
      "error"
    ],

    "no-caller": [
      "error"
    ],

    "comma-dangle": [
      "error",
      "always-multiline"
    ],

    "linebreak-style": [
      "error",
      "unix"
    ],

    "quotes": [
      "error",
      "single",
      "avoid-escape"
    ],

    "semi": [
      "error",
      "always"
    ],

    "strict": [
      "error",
      "safe"
    ],

    "arrow-body-style": [
      "error",
      "always"
    ],

    "arrow-spacing": [
      "error"
    ],

    "arrow-parens": [
      "error",
      "always"
    ],

    "no-duplicate-imports": [
      "error",
      {
        "includeExports": true
      }
    ],

    "no-useless-computed-key": [
      "error"
    ],

    "no-useless-constructor": [
      "error"
    ],

    "no-useless-rename": [
      "error"
    ],

    "no-var": [
      "error"
    ],

    "object-shorthand": [
      "error",
      "always"
    ],

    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],

    "prefer-rest-params": [
      "error"
    ],

    "prefer-spread": [
      "error"
    ],

    "prefer-template": [
      "error"
    ],

    "sort-imports": [
      "error"
    ],

    "template-curly-spacing": [
      "error",
      "never"
    ]
  }
}
